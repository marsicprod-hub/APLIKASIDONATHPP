<Application
    x:Class="HppDonatApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HppDonatApp">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- MUX2 Resources removed from default -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Custom Colors and Brushes -->
            <SolidColorBrush x:Key="AppPrimaryBrush" Color="#FF2E7D32" />
            <SolidColorBrush x:Key="AppAccentBrush" Color="#FFF57F17" />

            <!-- Default custom styles go here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
