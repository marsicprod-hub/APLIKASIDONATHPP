<Page
    x:Class="HppDonatApp.Views.ReportsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Padding="20" Spacing="20">
        <TextBlock Text="Reports & Analytics" Style="{StaticResource HeaderTextBlockStyle}" />

        <TextBlock Text="Price History and Trend Analysis" Style="{StaticResource SubheaderTextBlockStyle}" />

        <StackPanel Spacing="10" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <TextBlock Text="Cost Breakdown by Category" />
            <Grid Height="300" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4">
                <TextBlock Text="Chart placeholder (requires LiveCharts2)" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Grid>
        </StackPanel>

        <StackPanel Spacing="10" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" Padding="0,0,0,10">
            <TextBlock Text="Scenario Comparison" />
            <Button Content="Export Data to CSV" Click="ExportButton_Click" />
            <TextBlock x:Name="ExportStatusText" Text="Ready" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <StackPanel Spacing="10">
            <TextBlock Text="Summary Statistics" />
            <StackPanel Spacing="5" Padding="10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4">
                <TextBlock Text="Total Recipes: 2" />
                <TextBlock Text="Total Ingredients: 9" />
                <TextBlock Text="Average Unit Cost: Rp 12.500" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Page>
