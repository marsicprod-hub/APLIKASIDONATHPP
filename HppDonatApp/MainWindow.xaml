<Window
    x:Class="HppDonatApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HppDonatApp"
    Title="HPP Donat Calculator">

    <Grid>
        <NavigationView
            x:Name="NavView"
            IsBackButtonVisible="Auto"
            IsSettingsVisible="True"
            SelectionChanged="NavView_SelectionChanged"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Home" Content="Dashboard" Tag="dashboard" />
                <NavigationViewItem Icon="Edit" Content="Recipe Editor" Tag="recipe" />
                <NavigationViewItem Icon="Document" Content="Reports" Tag="reports" />
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>
